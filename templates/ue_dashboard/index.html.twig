{% extends 'base.html.twig' %}
{% block title %}Mon Espace{% endblock %}

{% block body %}

<div class="container">
  <div class="rectangle">
    <h1>Bienvenue sur votre tableau de bord</h1>

  <section class="mt-5">
    <h2>Mes UE</h2>
    <div class="row">
      {% for ue in ues %}
        <div class="col-md-4 mb-4">
          <div class="card">
            {% if ue.imagePath %}
              <img src="{{ ue.imagePath }}" class="card-img-top" alt="{{ ue.title }}">
            {% endif %}
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">{{ ue.title }}</h5>
              <p class="card-text text-muted">{{ ue.code }}</p>
              <a href="{{ path('app_u_e_dashboard_show', { id: ue.id }) }}" class="btn btn-outline-primary mt-auto">
                Voir détails
              </a>
            </div>
          </div>
        </div>
      {% else %}
        <div class="col-12">
          <p class="text-muted">Vous n'êtes inscrit à aucune UE.</p>
        </div>
      {% endfor %}
    </div>
  </section>



  <section class="recent-posts">
    <h2 class="h4 mb-3">Articles récents</h2>
    <div id="posts-wrapper"
      data-controller="pagination"
      data-pagination-target="wrapper"
      data-action="click->pagination#changePage">
    {% include 'ue_dashboard/_posts.html.twig' %}
    </div>
  </section>
  </div>


</div>
{% endblock %}