{% extends 'base.html.twig' %}
{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th>Mot de passe</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('app_user_admin_show', {'id': user.id}) }}">Voir</a>
                    <a class="btn btn-sm btn-secondary" href="{{ path('app_user_admin_edit', {'id': user.id}) }}">Éditer</a>
                    {{ include('user_admin/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun utilisateur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}