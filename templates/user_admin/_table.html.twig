<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="h5 mb-0">Liste des utilisateurs</h2>
  <a href=#
     class="btn btn-success btn-sm"
     id="btn-add-user">
    + Nouvel utilisateur
  </a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Roles</th>
      <th>Pr√©nom</th>
      <th>Nom</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for user in users %}
      <tr>
        <td>{{ user.email }}</td>
        <td>{{ user.roles|join(', ') }}</td>
        <td>{{ user.name }}</td>
        <td>{{ user.surname }}</td>
        <td>
          <a class="btn btn-sm btn-info show-button-user"
             href="{{ path('app_user_admin_show', { id: user.id }) }}">
            Voir
          </a>
          <a class="btn btn-sm btn-primary edit-button-user"
             href="{{ path('app_user_admin_edit', { id: user.id }) }}">
            Modifier
          </a>
          {{ include('user_admin/_delete_form.html.twig', { user: user }) }}
        </td>
      </tr>
    {% else %}
      <tr>
        <td colspan="5" class="text-center">Aucun utilisateur</td>
      </tr>
    {% endfor %}
  </tbody>
</table>