{% extends 'base.html.twig' %}
{% block title %}Détails UE{% endblock %}
{% block body %}
  <h1>Détails de l’UE</h1>
  <table class="table">
    <tr>
      <th>Code</th>
      <td>{{ ue.code }}</td>
    </tr>
    <tr>
      <th>Titre</th>
      <td>{{ ue.title }}</td>
    </tr>
    {% if ue.imagePath %}
      <tr>
        <th>Image</th>
        <td><img src="{{ ue.imagePath }}" alt="" style="max-height:100px"></td>
      </tr>
    {% endif %}
  </table>
  <a class="btn btn-primary" href="{{ path('app_ue_admin_edit', {'id': ue.id}) }}">
    Modifier
  </a>
  {{ include('ue_admin/_delete_form.html.twig', {ue: ue}) }}
  <a class="btn btn-secondary" href="{{ path('app_ue_admin_index') }}">
    ← Retour à la liste
  </a>
{% endblock %}