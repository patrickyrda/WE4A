<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Titre</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for ue in ues %}
      <tr>
        <td>{{ ue.code }}</td>
        <td>{{ ue.title }}</td>
        <td>
  {# Bouton pour gérer les posts liés à l'UE #}
  <button
    class="btn btn-outline-primary btn-sm mb-1"
    type="button"
    data-bs-toggle="modal"
    data-bs-target="#postModal"
    data-controller="post-loader"
    data-action="click->post-loader#load"
    data-ue-id="{{ ue.id }}">
    Gérer les posts
  </button>

  {# Nouveau bouton Modifier l'UE #}
  <button
    class="btn btn-outline-secondary btn-sm mb-1"
    type="button"
    data-url="{{ path('app_u_e_admin_edit', { id: ue.id }) }}"
    data-action="click->admin-dashboard#openEditModal">
    Modifier
  </button>

  {# Nouveau bouton Supprimer l'UE #}
  <button
    class="btn btn-outline-danger btn-sm"
    type="button"
    data-url="{{ path('app_u_e_admin_delete', { id: ue.id }) }}"
    data-action="click->admin-dashboard#askDeleteUe">
    Supprimer
  </button>
</td>

      </tr>
    {% else %}
      <tr>
        <td colspan="3" class="text-center text-muted">Aucune UE trouvée.</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
