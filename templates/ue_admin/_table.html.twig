<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="m-0">Gestion des UE</h2>
  <a href=#
   class="btn btn-success"
   id = "btn-add-ue">
    + Nouvelle UE
  </a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Titre</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for ue in u_es %}
      <tr>
        <td>{{ ue.code }}</td>
        <td>{{ ue.title }}</td>
        <td>
          {% if ue.imagePath %}
            <img src="{{ asset(ue.imagePath) }}" alt="{{ ue.title }}" style="height:40px">
          {% endif %}
        </td>
        <td>
          <a class="btn btn-sm btn-info" href="{{ path('app_u_e_admin_show', { id: ue.id }) }}">Voir</a>
          <a class="btn btn-sm btn-primary edit-button-ue" href=# data-ue-id = {{ue.id}}
          >Modifier</a>
          {{ include('ue_admin/_delete_form.html.twig', { ue: ue }) }}
        </td>
      </tr>
    {% else %}
      <tr>
        <td colspan="4" class="text-center">Aucune UE trouv√©e</td>
      </tr>
    {% endfor %}
  </tbody>
</table>