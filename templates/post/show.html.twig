{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="bandeau">
        <h1>Post</h1>
    </div>
<div class="rectangle rectangle1">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ post.message }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="post-links">

    <a href="{{ path('app_post_index') }}" class="btn btn-back-to-list-edit">back to list</a>
    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-back-to-list-edit">edit</a>

    {{ include('post/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
