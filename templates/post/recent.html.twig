<article class="card shadow-sm">
  <div class="card-body">
    {% set auteur = post.userId %}
    {% set ue     = post.ueId %}

    {% if post.files|length > 0 %}
      {% set fichier    = post.files|first %}
      {% set nomFichier = fichier.filePath|split('/')|last %}
      <p class="mb-1">
        <strong>{{ auteur.name }} {{ auteur.surname }}</strong>
        a posté un nouveau fichier,
        <strong>{{ nomFichier }}</strong>,
        dans <strong>{{ ue.title }}</strong>.
      </p>
    {% else %}
      <p class="mb-1">
        <strong>{{ auteur.name }} {{ auteur.surname }}</strong>
        a posté un nouveau message
        <strong>{{ post.message|u.truncate(60, '…') }}</strong>
        dans <strong>{{ ue.title }}</strong>.
      </p>
    {% endif %}

    <small class="text-muted">{{ post.date|date('d/m/Y H:i') }}</small>
  </div>
</article>