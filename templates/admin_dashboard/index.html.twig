{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block body %}
<div data-controller="admin-dashboard">
  <h1>Administration</h1>

  <div class="mb-4">
    <button
      type="button"
      class="btn btn-primary me-2"
      data-action="click->admin-dashboard#loadUeTable"
    >
      Gérer les UE
    </button>

    <button
      type="button"
      class="btn btn-secondary"
      data-action="click->admin-dashboard#loadUserTable"
    >
      Gérer les utilisateurs
    </button>
  </div>

  <!-- Containers pour charger dynamiquement les tables -->
  <div id="ue-table-container" data-admin-dashboard-target="ueContainer"></div>
  <div id="user-table-container" data-admin-dashboard-target="userContainer"></div>

  <!-- Modal pour afficher Voir / Modifier -->
  <div class="modal fade" id="modalAdmin" tabindex="-1" aria-hidden="true" data-admin-dashboard-target="modal">
    <div class="modal-dialog">
      <div class="modal-content" data-admin-dashboard-target="modalContent">
        <!-- Contenu AJAX du modal injecté ici -->
      </div>
    </div>
  </div>
</div>
{% endblock %}
